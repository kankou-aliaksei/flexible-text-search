    "elastic-builder": "^2.17.3",
    "elasticsearch": "^16.7.1",
    "mathjs": "^11.5.0",
    "occurrences": "^0.0.2",
    "replaceall": "^0.1.6",
    "tslog": "^4.7.1",
    "underscore": "^1.13.6"
